<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/alert_card"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="6dp"
                                   android:paddingStart="100dp"
                                   android:paddingEnd="100dp"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="6dp">

    <LinearLayout
            android:id="@+id/alert_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/s1_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingTop="8dp" android:paddingEnd="8dp" android:paddingBottom="8dp">

        <ImageView
                android:id="@+id/alert_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/ic_water_percent"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fire"
                    android:textAlignment="center"
                    android:textColor="#F44336"
                    android:textSize="30sp"/>

            <TextView
                    android:id="@+id/alert_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fire"
                    android:textAlignment="center"
                    android:textColor="#FF9100"
                    android:textSize="24sp"/>

            <TextView
                    android:id="@+id/alert_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2019/8/1 12:00"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textSize="18sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>